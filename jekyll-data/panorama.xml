---
layout: null
---
<krpano version="1.18">
    {% for panorama in site.data.panorama %}
	<view 
        hlookat="{{ panorama.view[0].hlookat }}" 
        vlookat="{{ panorama.view[0].vlookat }}" 
        maxpixelzoom="{{ panorama.view[0].maxpixelzoom }}" 
        fovmax="{{ panorama.view[0].fovmax }}" 
        limitview="{{ panorama.view[0].limitview }}" 
        vlookatmin="{{ panorama.view[0].vlookatmin }}" 
        vlookatmax="{{ panorama.view[0].vlookatmax }}" />
	
	<preview url="/{{ panorama.id }}.tiles/preview.jpg" />
	<image>
		<cube url="/{{ panorama.id }}.tiles/pano_%s.jpg" />
		<mobile>
			<cube url="/{{ panorama.id }}.tiles/mobile_%s.jpg" />
		</mobile>
	</image>{% endfor %}

    {% for hotspot in site.hotspots %}{% if hotspot.ath %}
    <hotspot 
        name="a{{ hotspot.id}}"
        type="image"
        url="/{{ hotspot.hotspot_image }}"
        {% if hotspot.zoomable %}visible="false"{% else %}visible="true"{% endif %}
        enabled="true"
        ath="{{ hotspot.ath }}"
        atv="{{ hotspot.atv }}"
        scale="0.35"
        edge="center"
        zoom="true"
        onclick="js( DetailPanel.updateDetailPanel({{ hotspot.id }}) );" />{% endif %}{% endfor %}
    {% for drawer in site.data.drawers %}
    <hotspot
        name="{{ drawer.id }}"
        enabled="true"
        alpha="0"
        borderwidth="3.0"
        bordercolor="0xFFFFFF"
        borderalpha="0.5"
        onclick="js( Drawer.openDrawer('{{ drawer.id }}') );">
        {% for point in drawer.points %}<point ath="{{ point.ath }}" atv="{{ point.atv }}" />
        {% endfor %}
    </hotspot>{% endfor%}

    <events
        onmousewheel="js( updateSecondaryHotspots() );"
        />

</krpano>
